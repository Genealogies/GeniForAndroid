<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="6dp"
	android:background="?android:attr/selectableItemBackground" >

	<ImageView
		android:id="@+id/galleria_foto"
		android:layout_width="90dp"
		android:layout_height="90dp"
		android:layout_marginRight="8dp"
		app:srcCompat="@drawable/manichino" />

		<TextView
			android:id="@+id/galleria_testo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/galleria_foto"
			android:text="Titoletto della foto C\percorso\cartella\file_photo.jpg Altri_dettagli_piccanti_della foto"
			android:textAppearance="@style/TextAppearance.AppCompat" />

</RelativeLayout>
