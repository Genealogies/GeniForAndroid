<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/editadata_tipi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp" />


    <LinearLayout
        android:id="@+id/editadata_prima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/prima_giorno"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:theme="@style/Ruota" />

        <NumberPicker
            android:id="@+id/prima_mese"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:theme="@style/Ruota" />

        <NumberPicker
            android:id="@+id/prima_secolo"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:theme="@style/Ruota" />

        <NumberPicker
            android:id="@+id/prima_anno"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:theme="@style/Ruota" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/editadata_seconda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <NumberPicker
            android:id="@+id/seconda_giorno"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:theme="@style/Ruota" />

        <NumberPicker
            android:id="@+id/seconda_mese"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:theme="@style/Ruota" />

        <NumberPicker
            android:id="@+id/seconda_secolo"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:theme="@style/Ruota" />

        <NumberPicker
            android:id="@+id/seconda_anno"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:theme="@style/Ruota" />

    </LinearLayout>

</LinearLayout>